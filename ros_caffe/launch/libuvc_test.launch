<launch>
  <arg name="image_from"            default="image_raw" />
  <arg name="image_to"            default="image" />
  <arg name="throttle_to"      default="0.5" />
  <arg name="camera_info"      default="camera_info" />

  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find ros_caffe)/cfg/custom_rosconsole.conf"/>

  <node pkg="libuvc_camera" type="camera_node" name="usb_cam">
    <!-- Parameters used to find the camera -->
    <param name="vendor" value="0x05a3"/>
    <param name="product" value="0x9230"/>
    <param name="serial" value=""/>
    <!-- If the above parameters aren't unique, choose the first match: -->
    <param name="index" value="0"/>

    <!-- Image size and type -->
    <param name="width" value="1280"/>
    <param name="height" value="720"/>
    <param name="frame_rate" value="60"/>
    <!-- choose whichever uncompressed format the camera supports: -->
    <param name="video_mode" value="mjpeg"/> <!-- or yuyv/nv12/jpeg -->

    <param name="timestamp_method" value="start"/> <!-- start of frame -->
    <!--param name="camera_info_url" value="file:///tmp/cam.yaml"/-->

    <param name="auto_exposure" value="0"/> <!-- use manual exposure, manual iris -->
    <param name="auto_white_balance" value="false"/>

    <remap from="~image_raw"    to="$(arg image_from)"/>
    <remap from="~camera_info"  to="$(arg camera_info)"/>
  </node>

  <node name="$(anon im1)" type="throttle" pkg="topic_tools" args="messages $(arg image_from)/compressed $(arg throttle_to) $(arg image_to)/compressed" />

  <node name="$(anon im2)" type="throttle" pkg="topic_tools" args="messages $(arg image_from)/compressed/parameter_updates $(arg throttle_to) $(arg image_to)/compressed/parameter_updates" />

  <node name="$(anon im3)" type="throttle" pkg="topic_tools" args="messages $(arg image_from)/compressed/parameter_descriptions $(arg throttle_to) $(arg image_to)/compressed/parameter_descriptions" />

  <node name="$(anon im0)" type="throttle" pkg="topic_tools" args="messages $(arg image_from) $(arg throttle_to) $(arg image_to)" />

</launch>
