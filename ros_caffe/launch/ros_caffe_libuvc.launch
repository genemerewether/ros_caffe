<launch>
  <arg name="image"            default="/image_raw" />
  <arg name="throttle_to"      default="1" />
  <arg name="camera_info"      default="/camera_info" />

  <arg name="width" default="640" />
  <arg name="height" default="480" />

  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find ros_caffe)/cfg/custom_rosconsole.conf"/>

  <node pkg="libuvc_camera" type="camera_node" name="usb_cam">
    <!-- Parameters used to find the camera -->
    <param name="vendor" value="0x05a3"/>
    <param name="product" value="0x9230"/>
    <param name="serial" value=""/>
    <!-- If the above parameters aren't unique, choose the first match: -->
    <param name="index" value="0"/>

    <!-- Image size and type -->
    <param name="width" value="1280"/>
    <param name="height" value="720"/>
    <param name="frame_rate" value="60"/>
    <!-- choose whichever uncompressed format the camera supports: -->
    <param name="video_mode" value="mjpeg"/> <!-- or yuyv/nv12/jpeg -->

    <param name="timestamp_method" value="start"/> <!-- start of frame -->
    <!--param name="camera_info_url" value="file:///tmp/cam.yaml"/-->

    <param name="auto_exposure" value="0"/> <!-- use manual exposure, manual iris -->
    <param name="auto_white_balance" value="false"/>


    <remap from="~image_raw"    to="$(arg image)"/>
    <remap from="~camera_info"  to="$(arg camera_info)"/>
  </node>
 
  <node name="ros_imresize" pkg="ros_imresize" type="ros_imresize" output="screen">
    <param name="camera_info" value="$(arg camera_info)" />
    <param name="topic_crop" value="$(arg image)" />
    <param name="resize_width" value="$(arg width)" />
    <param name="resize_height" value="$(arg height)" />
    <param name="undistord" value="false" />
  </node>

  <node name="image_throttler" type="throttle" pkg="topic_tools" args="messages $(arg image)_crop/compressed $(arg throttle_to) $(arg image)_crop_throttled/compressed" />
  <node name="camera_info_throttler" type="throttle" pkg="topic_tools" args="messages $(arg camera_info)_crop $(arg throttle_to) $(arg camera_info)_crop_throttled" />

  <include file="$(find ros_caffe)/launch/ros_caffe.launch">
    <arg name="image" value="$(arg image)_crop_throttled" />
    <arg name="camera_info" value="$(arg camera_info)_crop_throttled" />
  </include>

</launch>
